<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppBaseTheme.Notitle">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="RatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_yellow</item>
        <item name="android:indeterminateDrawable">@drawable/rating_bar_yellow</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/hold_orange_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
